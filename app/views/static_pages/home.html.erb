<% if signed_in? %>
<div class="container">
  <div class="row">
    <div class="span12">
      <%= render 'shared/feed' %>
    </div>
  </div>
</div>  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the My App</h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>
  <%= render 'layouts/footer' %>
<% end %> 