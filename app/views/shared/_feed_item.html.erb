<li class="feed_item" id="<%= feed_item.id %>"  >
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="timestamp">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
    <div class="feed-item-action">
    <%= render 'users/upvote' , micropost: feed_item %>
    <%= render 'users/downvote', micropost: feed_item %>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.content %>
  <% end %>
  </div>
  <br/>
    <span class="content" data-href="<%= micropost_path(feed_item) %>" ><%= feed_item.content %></span>
</li>