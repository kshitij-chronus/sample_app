<% if current_user.upvote?(micropost) %>
	<%= form_for(current_user.votes.where(:category => 1).find_by_micropost_id(micropost), html: { method: :delete }) do |f| %>
    <%= f.hidden_field :micropost_id %>
    <%= f.hidden_field :category %> 
    <%#= f.submit "Unupvote", class: "btn btn-small" %>
    <%# debugger %>
    <%= button_tag "<i class=\"icon-thumbs-up\"></i> #{micropost.votes.where(:category => 1).count}".html_safe , :class=>"btn btn-medium btn-info vote-btn" %>
  <% end %>
<% else %>
  <%= form_for(current_user.votes.where(:category => 1).build(micropost_id: micropost.id)) do |f| %>
      <%= f.hidden_field :micropost_id %>  
      <%= f.hidden_field :category %>
      <% if current_user.downvote?(micropost) %>  
        <%#= f.submit "Upvote", class: "btn btn-small btn-info" , disabled: "disabled" %>
        <%= button_tag "<i class=\"icon-thumbs-up\"></i> #{micropost.votes.where(:category => 1).count}".html_safe , :class=>"btn btn-medium vote-btn" ,disabled: "disabled" %> 
      <% else %>
        <%#= f.submit "Upvote", class: "btn btn-small btn-info" %>
        <%= button_tag "<i class=\"icon-thumbs-up\"></i> #{micropost.votes.where(:category => 1).count}".html_safe , :class=>"btn btn-medium vote-btn" %>
    <% end %> 
  <% end %>
<% end %>








