<% provide(:title, @user.name) %>
<div class="row-fluid">
  <div class="span4">
    <aside>
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
        <br></br>
        <%= render 'follow_form' if signed_in? %>
      </section>
      <% if(current_user==@user) %>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
      <% end %>
    </aside>
  </div>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Cards (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>