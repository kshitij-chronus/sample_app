<%= link_to gravatar_for(@micropost.user), @micropost.user %>
    <span class="user">
      <%= link_to @micropost.user.name, @micropost.user %>
    </span>
<span class="timestamp">
   Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
</span>
<div class="feed-item-action">
  <%= render 'users/upvote' , micropost: @micropost %>
  <%= render 'users/downvote', micropost: @micropost %>
  <% if current_user?(@micropost.user) %>
    <%= link_to "delete", @micropost, method: :delete, data: { confirm: "You sure?" }, title: @micropost.content %>
  <% end %>
  <br></br>
  <span class="content"><%= @micropost.content %>
</span>
</div>